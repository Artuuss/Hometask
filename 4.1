def BinarySearch(mass, k, direction):
    l=0 
    r=len(mass)-1
    index=-1
    while l<=r:
        mid=l+(r-l)//2
        if direction==1:
            if k==mass[mid]:
                index=mid
                r=mid-1
            elif k<mass[mid]:
                r=mid-1
            else:
                l=mid+1
        else:
            if k==mass[mid]:
                index=mid
                l=mid+1
            elif k<mass[mid]:
                l=mid+1
            else:
                r=mid-1
    return index

